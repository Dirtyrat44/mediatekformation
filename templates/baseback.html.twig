{% extends "basefront.html.twig" %}

{% block title %}Centre d'administration{% endblock %}

{% block top %}

    <div class="container">
        <!-- titre -->
        <div class="text-left">
            <img src="{{ app.request.getBasePath()~'/banniere.jpg' }}" alt="Bannière du site">
        </div>
        <!-- menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarSupportedContent">

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_formation_index') }}">Formations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_playlist_index') }}">Playlists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_categorie_index') }}">Catégories</a>
                        </li>
                    </ul>

                    {% if app.user %}
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="{{ path('app_logout') }}"
                                   class="btn btn-info btn-danger btn-sm"
                                   title="Se déconnecter">
                                    <i class="fas fa-sign-out-alt" aria-hidden="true"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </nav>


    </div>
    <div class="container mt-2">
        <div class="alert alert-warning text-center" role="alert">
            <strong>Interface d'administration</strong>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-3">
        {{ include('admin/partial/_flash_messages.html.twig') }}
    </div>
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <style>
        input[type="checkbox"]:checked {
            accent-color: #0dcaf0;
        }

        .form-check-input:checked {
            background-color: #0dcaf0;
            border-color: #0dcaf0;
        }
    </style>
{% endblock %}